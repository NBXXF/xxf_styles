<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
 注意！！！！！
 样式声明 一般不得包含padding,margin,属于业务部分
 -->
    <!-- 标准button 橙色button样式 -->
    <style name="Button_BaseStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/btn_text_color_sl</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_c2_round_rect_sl</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--没有内边距 -->
    <style name="Button_NoPaddingStyle" parent="Button_BaseStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>