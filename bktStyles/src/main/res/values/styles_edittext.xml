<?xml version="1.0" encoding="utf-8"?><resources>    <!--    注意！！！！！    样式声明 一般不得包含padding,margin,属于业务部分    -->    <!--  标准edittext    文字 c1    hint c5     -->    <style name="EditText_BaseStyle" parent="@style/Widget.AppCompat.EditText">        <item name="android:gravity">center_vertical</item>        <item name="android:textColor">@color/C1</item>        <item name="android:textColorHint">@color/C5</item>        <item name="colorControlNormal">@color/C5</item>        <item name="colorControlActivated">@color/C2</item>    </style>    <!-- 标准edidText theme-->    <style name="EditText_BaseTheme" parent="Theme.AppCompat.Light">        <item name="colorControlNormal">@color/C5</item>        <item name="colorControlActivated">@color/C2</item>    </style>    <!--    没有背景的输入框    -->    <style name="EditText_NoBgStyle" parent="EditText_BaseStyle">        <item name="android:padding">0dp</item>        <item name="android:background">@null</item>    </style></resources>